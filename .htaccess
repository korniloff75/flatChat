AddDefaultCharset UTF-8

Options -Indexes

# Начальный файл
DirectoryIndex index.php

# Без HTTPS не работает голосовой ввод текста
RewriteEngine On
RewriteCond %{HTTPS} =off [OR]
# Универсальный редирект с www
RewriteCond %{HTTP_HOST} ^www\.(.*) [NC]
# RewriteRule ^(www\.)?(.*) https://%{HTTP_HOST}%{REQUEST_URI} [QSA,R=301,L]
RewriteRule ^(www\.)?(.*) https://$2%{REQUEST_URI} [QSA,R=301,L]

<IfModule env_module>
SetEnv TZ Europe/Moscow
</IfModule>